<div id="progress" class=" fade rotateleft">
  <div class="inner">
    <i class="fa fa-magic fa-10x"></i>
    <h1>Quiz<span class="gray">zard</span></h1>
    <small>Powered by Gamaroff Digital</small>
  </div>
</div>

<div class="arena init row">
  <div class="main done main-red">
    <div class="main-header">
      <div class="inner">
        <i class="fa fa-tachometer"></i>
        <h1>Quiz<span class="gray">zard</span></h1>
      </div>
      <a class="btn btn-left" href="#" onclick="javascript:FB.logout()"><i class="fa fa-power-off fa-2x"></i></a>
    </div>
    <div class="main-body">
      <div class="box">

        <span class="gm-profile-pic">
            <span class="procile-circle"></span>

            <%= image_tag('avatar_placeholder.svg',id: 'user-avatar', width: 100, height: 100) %>
        </span>
        <h2>Wellcome <strong>Guest</strong>.</h2>
        <form accept-charset="UTF-8" action="<%= quizzes_path %>" method="get" id="nickform">
          <input type="text" class="input-lg" name="nick" id="newnickname" placeholder="Choose a nickname" />
        <input type="text" class="input-lg" id="symbol" value="" />

        <br/>
        <br/>
        <%= link_to "Start Quiz <i class='fa fa-puzzle-piece'></i>".html_safe, quizzes_path, id: 'quiz_start', :class => 'btn btn-success btn-lg',:onclick => "$('#nickform').submit()" %>
        </form>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
</div>
</div>



