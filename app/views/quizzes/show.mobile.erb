<div id="progress" class="fade">
  <div class="inner">
    <i class="fa fa-magic fa-10x"></i>
    <h1>Quiz<span class="gray">zard</span></h1>
    <small>Powered by Gamaroff Digital</small>
  </div>
</div>
<div class="arena init row">
  <div class="main done main-yellow">
    <div class="main-header">
      <div class="inner">
        <i class="fa fa-magic"></i>
        <h1>Quiz<span class="gray">zard</span></h1>
      </div>
      <a class="btn btn-left" href="#" onclick="javascript:FB.logout()"><i class="fa fa-power-off fa-2x"></i></a>
    </div>
    <div class="main-body">
      <div class="box">
          <div class="box-head">
            <h3>
              Leaderboard
            </h3>
          </div>
          <div class="box-body">

             <table width="100%" class="leadrboard">

               <% @result.each_with_index do |choice, index| %>
                   <tr>
                     <td>
                        <%= @position[index] %>
                     </td>
                     <td>
                        <%= image_tag 'avatar_placeholder.svg', :width => 30, :height => 30, :class => 'img-circle' %>
                     </td>
                     <td>
                        <%= choice.name %>
                     </td>
                     <td>
                        <%= choice.score %>
                     </td>
                   </tr>
               <% end %>
             </table>
            <br>


            <%= link_to "<i class='fa fa-twitter '></i> Tweet result".html_safe, new_quiz_path, :class => "btn btn-twitter btn-small" %>
            <%= link_to "<i class='fa fa-facebook '></i> Share result".html_safe, new_quiz_path, :class => "btn btn-facebook btn-small" %>
            <br>
            <br>
            <%= link_to "Want to play again?", new_quiz_path, :class => "btn btn-info btn-lg" %>
          </div>
      </div>


  </div>
  <div class="clearfix"></div>
</div>
</div>


